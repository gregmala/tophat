<div class="navbar navbar-expand-sm navbar-light navbar-lewagon border-black sticky">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "24699.png", style: "width: 50px; height:50px" %>
    <% end %>
    <%= link_to root_path, class: "title" do %>
       <h2 class="climate-crisis-font title__navbar">tophat</h2>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
