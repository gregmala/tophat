<style>

  .box {
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 30px;
  }

  .product-box, .booking-box {
    background-color: #F8F9FA;
    box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.1);
  }

  .card {
    display: flex;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 30px;
    box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.1);
    width: 100%;
    height: 100%;
  }

  .card img {
    height: 150px;
    margin-right: 20px;
    width: 100%;
  }

  .card-infos h2 {
    font-size: 18px;
    margin-bottom: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .card-infos p {
    font-size: 16px;
    margin: 0;
  }
  img {
  object-fit: contain;
  }

  .show-title {
    text-align: center !important;
  }

  .greeting {
    font-family: 'Roboto Condensed', sans-serif;
    margin-bottom: 64px;
    font-size: 70px;
    background: -webkit-linear-gradient(#FFE53B, #FF2525);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;

  }

  .list {
    margin-bottom:20px;
    color: white;
  }

  .status {
    font-family: 'Roboto Condensed', sans-serif;
  }

</style>



<div class="container">
  <div class="text-center">

    <h1 class="greeting"> Hi <%= @user.first_name %> <%= @user.last_name %>!</h1>

  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="card mx-auto product-box d-flex flex-column align-items-center" style="background-color: black">
        <h2 class="list">Your listed products</h2>
        <% @user.products.each do |product| %>
          <div class="card" style="display: flex; height: 194px;">
            <div class="row">
              <div class="col-md-6">
                <img src="<%= product.photo.url %>" />
              </div>
              <div class="col-md-6">
                <div class="card-infos">
                  <h2 class="show-title"><%= product.brand %></h2>
                  <p><strong>Description: </strong><%= product.description %></p>
                  <h2>Price: <%= product.price_per_cycle %>$</h2>
                  <% if product.avaible %>
                    <p><strong>Status: </strong>Currently unavailable</p>
                  <% else %>
                    <p><strong>Status: </strong>Available for rent</p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>




   <div class="col-md-6">
      <div class="box mx-auto booking-box d-flex flex-column align-items-center" style="background-color: black">
        <h2 class="list">Your Bookings</h2>
        <% @user.bookings.each do |booking| %>
          <div class="card" style="height: 194px;">
            <div class="row">
              <div class="col-md-6 sticky">
                <div class="card-infos">
                  <h3 class="status"><%= booking.status %></h3>
                  <h2><%= booking.product.brand %></h2>
                  <p><strong>Description: </strong><%= booking.product.description %></p>
                  <h2><strong>Price:</strong> <%= booking.product.price_per_cycle %>$</h2>
                </div>
              </div>
              <div class="col-md-6">
                <img src="<%= booking.product.photo.url %>">
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
